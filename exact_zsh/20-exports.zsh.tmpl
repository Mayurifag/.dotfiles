# AI section

export GEMINI_API_KEY="{{ (joinPath .chezmoi.sourceDir "keys.ejson" | ejsonDecrypt).gemini_api_key }}"
export ZSH_AI_PROVIDER="gemini"

# Paths

# Function to safely append to PATH only if directory exists
safe_append_to_path() {
  if [[ -d "$1" ]]; then
    export PATH="$PATH:$1"
  fi
}

safe_append_to_path "$HOME/.lmstudio/bin" # LM Studio CLI
safe_append_to_path "$HOME/.cargo/bin" # Rust/cargo
safe_append_to_path "$HOME/.local/bin" # By default, mise/uv setup puts shortcuts to ~/.local/bin. Also used for stew.

